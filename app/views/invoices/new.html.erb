<h1> Add new invoice </h1>

<% if @invoice.errors.any? %>
    <h2>Error:</h2>
    <ul>
        <% @invoice.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with scope: :invoice, url: invoices_path, local: true do |f| %>
    <p>
        <%= f.label :issue_date %><br/>
        <%= f.datetime_field :issue_date %>
    </p>
    <p>
        <%= f.label :maturity_date %><br/>
        <%= f.datetime_field :maturity_date %>
    </p>
    <p>
        <%= f.label :amount %><br/>
        <%= f.number_field :amount %>
    </p>
    <p>
        <%= f.label :vendor_name %><br/>
        <%= f.text_field :vendor_name %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>
<p><%= link_to 'Invoice list', invoices_path %></p>